<!DOCTYPE html>
<html>

<head>
    <title><%= name%>-<%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
</head>

<script>
    document.addEventListener('error', function(e) {
        console.log(e);
    }, true);

    if (e) {
        imgpath = '../profileimgs/default';
    }
</script>

<% include ../header.ejs %>

<body background="../images/background7.jpg" style="background-size:100% 500px">


<div class="container-fluid" style="padding: 10px; text-align:center; background-image:url('../images/posttop.jpg');background-size:100% 100%;">
    <img class="img-thumbnail img-circle" style="width: 140px;margin: 0 auto"  src=<%= imgpath %>>
    <p>
    <h5 class="text-center" style="font-size:250%;font-weight:600;color:#884400"><%= user.username%><br><small><%= user.description%></small></h5>
    </p>
    <p>
        <button onclick="window.location.href='/exhibitionSec/exhposting'" class="btn btn-small" style="background-color:#F5D777" type="button">New post</button>
        <button onclick="window.location.href='/personalSec/modifypage'" class="btn btn-small" style="background-color:#F5D777" type="button">Modify info</button>
    </p>
</div>
<div class="container-fluid" style="padding: 10px; min-height:500px;">
    <div class="row">
        <div class="col-2" style="text-align:right">
            <p>

                <a href="./profile" class="btn active" aria-pressed="true" role="button" style="background-color:#F5D777;color:#773300;width:75%;min-width:3.5cm">My Articles</a><br>
                <a href="./myhelp" class="btn" aria-pressed="true" role="button" style="background-color:#F5D777;color:#773300;width:75%;min-width:3.5cm">My Helps</a><br>
                <a href="./mycomment" class="btn" aria-pressed="true" role="button" style="background-color:#F5D777;color:#773300;width:75%;min-width:3.5cm">My Comments</a><br>
                <a href="./myfollowing" class="btn" aria-pressed="true" role="button" style="background-color:#F5D777;color:#773300;width:75%;min-width:3.5cm">My Followings</a><br>
                <a href="./myfollower" class="btn" aria-pressed="true" role="button" style="background-color:#F5D777;color:#773300;width:75%;min-width:3.5cm">My Followers</a><br>
                <a href="./mylike" class="btn" aria-pressed="true" role="button" style="background-color:#F5D777;color:#773300;width:75%;min-width:3.5cm">My Likes</a>

            </p>

        </div>
        <div class="col-10">
            <div class="container-fluid" style="padding:10px">
                <div class="list-group mx-auto w-75">
                    <form method="post" id = 'form'>
                        <% for (var i = 0; i < articleno; i++) { %>
                        <% if(result[i].type=='article') { %>
                            <div>
                                <input style="display: none" id="result" name="result">
                                <a href="#" id = '<%= result[i].articleID %>' onclick="enterArticle(this)" class="list-group-item list-group-item-action flex-column align-items-start" style="background-color:#F5D777;margin-top: 10px;height:320px">
                                    <div class="d-flex w-80 justify-content-between">
                                        <img src=<%=coverpic[i]%> style="width:315px;height:270px">
                                        <h5 class="mb-1"><%=result[i].articlename%></h5>
                                        <small><%=result[i].posttime%></small>
                                        <p><%=text[i]%></p>

                                    </div>
                                    <p class="mb-1" style="text-align:right"><%=result[i].authorname%></p>
                                </a>
                            </div>
                            <p>
                                <input style="display:none" id="id" name="id">
                                <button id="<%= result[i].articleID%>" onclick="getID(this)" type="submit" class="btn btn-small" style="background-color:#FFCC00" type="button">Delete</button>
                            </p>
                        <% } %>
                        <% } %>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<% include ../cprt.ejs %>

</body>

<script>
    function enterArticle(article) {
        var result = document.getElementById('result');
        result.value = article.id;
        document.getElementById('form').submit();
    }
    function getID(delButton) {
        var id = document.getElementById('id');
        id.value = delButton.id;
        document.getElementById('form').submit();
    }
</script>

</html>