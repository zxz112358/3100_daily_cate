<!DOCTYPE html>
<html>

<head>
    <title><%= name%>-<%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
</head>

<% include ../header.ejs %>

<body background="../images/background7.jpg" style="background-size:100% 500px">
<div class="container-fluid" style="padding: 10px; text-align:center; background-image:url('../images/posttop.jpg');background-size:100% 100%;">
    <img class="img-thumbnail img-circle" style="width: 140px;margin: 0 auto"  src=<%= imgpath %>>
    <p>
    <h5 class="text-center" style="font-size:250%;font-weight:600;color:#884400"><%= user.username%><br><small><%= user.description%></small></h5>
    </p>
    <p>
        <button onclick="window.location.href='/exhibitionSec/exhposting'" style="background-color:#F5D777" class="btn btn-small" type="button">New post</button>
        <button onclick="window.location.href='/personalSec/modifypage'" class="btn btn-small" type="button" Style="background-color:#F5D777">Modify info</button>
    </p>
</div>
<div class="container-fluid" style="padding: 10px;min-height:500px">
    <div class="row">
        <div class="col-2" style="text-align:right">
            <p>

                <a href="./profile" class="btn" aria-pressed="true" role="button" style="background-color:#F5D777;color:#773300;width:75%;min-width:3.5cm">My Articles</a><br>
                <a href="./myhelp" class="btn" aria-pressed="true" role="button" style="background-color:#F5D777;color:#773300;width:75%;min-width:3.5cm">My Helps</a><br>
                <a href="./mycomment" class="btn" aria-pressed="true" role="button" style="background-color:#F5D777;color:#773300;width:75%;min-width:3.5cm">My Comments</a><br>
                <a href="./myfollowing" class="btn active" aria-pressed="true" role="button" style="background-color:#F5D777;color:#773300;width:75%;min-width:3.5cm">My Followings</a><br>
                <a href="./myfollower" class="btn" aria-pressed="true" role="button" style="background-color:#F5D777;color:#773300;width:75%;min-width:3.5cm">My Followers</a><br>
                <a href="./mylike" class="btn" aria-pressed="true" role="button" style="background-color:#F5D777;color:#773300;width:75%;min-width:3.5cm">My Likes</a>

            </p>
        </div>
        <div class="col-10">
            <div class="container-fluid" style="padding:10px">
                <div class="row">

                    <% for (var i = 0; i < followingno; i++) { %>
                    <div class="col-2" style="text-align:center;margin-top:10px;margin-bottom:10px;margin-right:60px;margin-left:40px;background-color:#F5D777;padding-top:2px;">
                        <a href="./userpostpage">
                            <img src=<%=followingimg[i]%> class="img-thumbnail" style="width: 140px">
                            <p style="font-size:200%; color: #884400;font-weight: 600"><%=following[i].user2%></p>
                            <p style="font-size:100%; color:#884400"><%=following[i].description%></p>
                        </a>
                        <button class="btn btn-warning" aria-pressed="true" type="button">Unfollow</button>
                    </div>

                    <% } %>

                    <form method="post" id = 'form'>
                        <input style="display: none" id="followinguser" name="followinguser">
                        <% for (var i = 0; i < followingno; i++) { %>
                        <div class="col-2" style="text-align:center;margin-top:10px;margin-bottom:10px;margin-right:60px;margin-left:40px;background-color:#FFCC00;padding-top:2px;">
                            <a href="#" id = '<%=following[i].user2%>' onclick="enterUser(this)">
                                <img src=<%=followingimg[i]%> class="img-thumbnail" style="width: 140px">
                                <p style="font-size:200%; color: #884400;font-weight: 600"><%=following[i].user2%></p>
                                <p style="font-size:100%; color:#884400"><%=following[i].description%></p>
                            </a>
                            <button class="btn btn-warning" aria-pressed="true" type="button">Unfollow</button>

                        </div>

                        <% } %>
                    </form>

                </div>

            </div>
        </div>
    </div>

</div>
<% include ../cprt.ejs %>
</body>
<script>
    function enterUser(user) {
        var followinguser = document.getElementById('followinguser');
        followinguser.value = user.id;
        document.getElementById('form').submit();
    }
</script>
</html>