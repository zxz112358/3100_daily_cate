<!DOCTYPE html>
<html>

<head>
    <title><%= name%>-<%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
</head>

<% include ../header.ejs %>

<body background="../images/background7.jpg" style="background-size:100% 500px">
<h1 class = "font-weight-bold p-3" style="margin-left: 4.5em"><%= title %></h1>

<div class="container bg-white">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#exhibition" data-toggle="tab">Exhibition Post</a></li>
        <li><a href="#help" data-toggle="tab">Help Post</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="exhibition">
            <form method="post" id = "inputForm" enctype="multipart/form-data"class="mx-auto w-75">
                <input style="display: none" name="type" value="article">
                <div class="input-group">
                    <div class="input-group-text">
                        <input type="radio" name="tag" id="t1" value="main">
                        <label for="t1">Main Dishes</label>
                    </div>
                    <div class="input-group-text">
                        <input type="radio" name="tag" id="t2" value="dish">
                        <label for="t1">Dishes</label>
                    </div>
                    <div class="input-group-text">
                        <input type="radio" name="tag" id="t3" value="soup">
                        <label for="t1">Soups</label>
                    </div>
                    <div class="input-group-text">
                        <input type="radio" name="tag" id="t4" value="dessert">
                        <label for="t1">Desserts</label>
                    </div>
                </div>

                <label id = "titlelabel">Title:</label>
                <br><input id = "title" type="text" name = "title">
                <br><label id = "formchild1">Paragraph:</label>
                <br><textarea id = "formchild2" type="text" name = "text" class="mx-auto w-75"></textarea>
                <br><label id = "formchild3" >Picture:</label>
                <input id = "formchild4" type="file" name = "picture" class="mx-auto w-75">

                <br><button id = "end_input_btn" type="submit" class="btn">End input</button>
            </form>

            <br><button id = "next_btn" class="btn btn-primary">Next</button>
            <script>
                document.getElementById("next_btn").addEventListener("click", nextPara);
                function nextPara() {
                    var form = document.getElementById("inputForm");
                    var submit = document.getElementById("end_input_btn");

                    var newpara = document.createElement("textarea");
                    newpara.name = 'text';
                    form.insertBefore(document.createElement("br"), submit);
                    form.insertBefore(newpara, submit);

                    var newpic = document.createElement("input");
                    newpic.type = 'file';
                    newpic.name = 'picture';
                    form.insertBefore(document.createElement("br"), submit);
                    form.insertBefore(newpic, submit);
                    form.insertBefore(document.createElement("br"), submit);
                }
            </script>
        </div>

        <div class="tab-pane" id="help">
            <form method="post" id = "inputForm" enctype="multipart/form-data"class="mx-auto w-75">
                <input style="display: none" name = "type" value="help">
                <div class="input-group">
                    <div class="input-group-text">
                        <input type="radio" name="tag" id="t1" value="main">
                        <label for="t1">Main Dishes</label>
                    </div>
                    <div class="input-group-text">
                        <input type="radio" name="tag" id="t2" value="dish">
                        <label for="t1">Dishes</label>
                    </div>
                    <div class="input-group-text">
                        <input type="radio" name="tag" id="t3" value="soup">
                        <label for="t1">Soups</label>
                    </div>
                    <div class="input-group-text">
                        <input type="radio" name="tag" id="t4" value="dessert">
                        <label for="t1">Desserts</label>
                    </div>
                    <div class="input-group-text">
                        <input type="radio" name="tag" id="t5" value="ingredients">
                        <label for="t1">Ingredients</label>
                    </div>
                </div>

                <label id = "titlelabel">Title:</label>
                <br><input id = "title" type="text" name = "title">
                <br><label id = "formchild1">Paragraph:</label>
                <br><textarea id = "formchild2" type="text" name = "text" class="mx-auto w-75"></textarea>
                <br><label id = "formchild3" >Picture:</label>
                <input id = "formchild4" type="file" name = "picture" class="mx-auto w-75">

                <br><button id = "end_input_btn" type="submit" class="btn">End input</button>
            </form>

            <br><button id = "next_btn" class="btn btn-primary">Next</button>
            <script>
                document.getElementById("next_btn").addEventListener("click", nextPara);
                function nextPara() {
                    var form = document.getElementById("inputForm");
                    var submit = document.getElementById("end_input_btn");

                    var newpara = document.createElement("textarea");
                    newpara.name = 'text';
                    form.insertBefore(document.createElement("br"), submit);
                    form.insertBefore(newpara, submit);

                    var newpic = document.createElement("input");
                    newpic.type = 'file';
                    newpic.name = 'picture';
                    form.insertBefore(document.createElement("br"), submit);
                    form.insertBefore(newpic, submit);
                    form.insertBefore(document.createElement("br"), submit);
                }
            </script>
        </div>
    </div>


</div>




</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"/>
</html>


